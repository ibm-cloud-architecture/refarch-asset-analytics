{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": ".tmpbuild/dist",
    "rootDir": "./src/my-date-picker",
    "sourceMap": true,
    "removeComments": true,
    "moduleResolution": "node",
    "declaration": true,
    "lib": ["es2015", "dom"],
